---
import Page from "$page";
import Webring from "$components/friends/Webring.astro";
import Link from "$components/Link.astro";
import { REPO } from "$lib/data";
import Friend from "$lib/components/friends/Friend.astro";

import catppuccin from "$img/webrings/catppuccin.webp";
import uofg from "$img/webrings/uofg.webp";
---

<Page>
  <h1>Say hello to my friends</h1>
  <p>Here are some of my friends! You should check out their sites :]</p>

  <blockquote>
    If we're friends, and you want to be featured here, let me know, or
    <Link href={`https://github.com/${REPO}`}>add yourself</Link> :]
  </blockquote>

  <div class="mt-8 mb-6 flex flex-wrap gap-4">
    <Friend name="abstralexis" href="https://abstralexis.dev/" class="size-8" />
  </div>

  <h2>Webrings</h2>
  <figure>
    <blockquote>
      A webring is a collection of websites linked together in a loop. Each
      website contains links to the previous and next websites in the ring. If
      you navigate far enough, eventually you end up back where you started!
    </blockquote>
    <figcaption>
      â€” <Link href="https://github.com/k3rs3d/ringfairy">k3rs3d/ringfairy</Link>
      README.md
    </figcaption>
  </figure>

  <Webring
    name="catppuccin webring :3"
    url="https://ctp-webr.ing"
    id="newt"
    colour="ctp"
    image={catppuccin}
  />
  <Webring
    name="university of glasgow"
    url="https://uofg.newty.dev"
    id="newt"
    colour="blue"
    image={uofg}
  />
</Page>
