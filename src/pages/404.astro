---
import Page from "$page";
import { Image } from "astro:assets";
import dog from "$img/404.webp";
import { Button } from "$components/ui/button";
---

<Page title="404" titleClass="text-red">
  <div class="flex flex-col items-center">
    <Image
      src={dog}
      alt="A dog digging a hole, leading to nothing."
      class="w-xl select-none"
    />
    <h1>Page not found!</h1>
    <Button class="mt-4 hover:cursor-pointer" onclick="history.back()">
      Go back
    </Button>
  </div>
</Page>
