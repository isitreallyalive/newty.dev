---
import { cn } from "$utils";

interface Props {
  href: string;
  class?: string;
}

const { href, class: clazz = "bg-lavender" } = Astro.props;
---

<span class="group relative inline-block" id="outer">
  <a {href} class="hover:text-inherit!">
    <slot />
  </a>
  <span
    class={cn(
      "absolute bottom-0.75 left-0 h-0.5 w-full origin-left scale-x-0 transition-transform duration-200 group-hover:scale-x-100",
      clazz,
    )}></span>
</span>
